<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nikita.adb">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name">
        <activity android:name=".ADBActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
		<activity 
			android:name=".FastbootActivity"
			android:label="@string/fastboot">
		</activity>
		<activity 
			android:name=".AppListActivity"
			android:label="@string/app_list">
		</activity>
		<activity 
			android:name=".ADBFileManagerActivity"
			android:label="@string/file_manager">
		</activity>
		<activity 
			android:name=".FileManagerActivity"
			android:label="@string/file_manager">
		</activity>
		<activity 
			android:name=".AppManagerActivity"
			android:label="@string/app_manager">
		</activity>
    </application>

</manifest>
